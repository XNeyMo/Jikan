---
interface Props {
	type: string;
	title: string;
	body: string;
	imgsrc: string;
}

const { type, title, body, imgsrc } = Astro.props;
---

<div class="flex {type} justify-around">
	<div class="w-1/4">
		<img class="h-full" src={imgsrc} alt="Feature IMG">
	</div>

	<div class="w-3/4 flex flex-col justify-center gap-5">
		<h1 class="text-3xl text-amethyst-500 font-bold">{title}</h1>
		<p>{body}</p>
	</div>
</div>
